header.header
  nav.navbar.navbar-expand-lg
    .container-fluid.d-flex.align-items-center.justify-content-between
      .navbar-header
        // Navbar Header
        a.navbar-brand(href='home')
          .brand-text.brand-big.visible.text-uppercase
            strong.text-primary PH
            strong Covid19
            strong.text-primary Tracker
          .brand-text.brand-sm
            strong.text-primary PH
            strong C
            strong.text-primary T
        // Sidebar Toggle Btn
        button.sidebar-toggle
          i.fa.fa-long-arrow-left
.d-flex.align-items-stretch
  // Sidebar Navigation
  nav#sidebar
    // Sidebar Navidation Menus
    ul.list-unstyled
      li.active
        a(href='home')
          i.icon-home
          | Home
      li
        a(href='tables')
          i.icon-grid
          | Tabular Data
      li
        a(href='aboutus')
          i.icon-settings
          | About Us
  .page-content
    .container-fluid
      ul.breadcrumb
    section
      .page-header
        .container-fluid.text-center
          h2.h5.no-margin-bottom.text-primary PH COVID-19 Information as of #{date}
    section.no-padding-top.no-padding-bottom
      .container-fluid
        .row
          .col-md-4.col-sm-4
            .statistic-block.block
              .progress-details.d-flex.align-items-end.justify-content-between
                .title
                  .icon.dashtext-5
                    i.icon-line-chart
                  strong.dashtext-5 CASES
                .number.dashtext-5 #{pos}
          .col-md-4.col-sm-4
            .statistic-block.block
              .progress-details.d-flex.align-items-end.justify-content-between
                .title
                  .icon.dashtext-3
                    i.icon-paper-and-pencil
                  strong.dashtext-3 DEATHS
                .number.dashtext-3 #{dea}
          .col-md-4.col-sm-4
            .statistic-block.block
              .progress-details.d-flex.align-items-end.justify-content-between
                .title
                  .icon.dashtext-4
                    i.icon-page
                  strong.dashtext-4 RECOVERIES
                .number.dashtext-4 #{rec}
    section.no-padding-bottom
      .container-fluid
        .row
          .col-lg-12
            .line-cahrt.block
              canvas#lines
    footer.footer
      .footer__block.block.no-margin-bottom
        .container-fluid.text-center
          p.no-margin-bottom
            | 2020 &copy; AMNA
