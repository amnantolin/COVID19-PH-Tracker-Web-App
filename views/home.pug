// Chart Script
script.
    var ilabel = JSON.parse('!{dl}');
    var crate = JSON.parse('!{dp}');
    var drate = JSON.parse('!{dd}');
    var rrate = JSON.parse('!{dr}');
    var average = JSON.parse('!{av}')

    Chart.defaults.global.defaultFontColor = '#75787c';

    var legendState = true;
    if ($(window).outerWidth() < 576) {
        legendState = false;
    }

    var LINE = $('#lines');
    var myLine = new Chart(LINE, {
        type: 'line',
        options: {
            scales: {
                xAxes: [{
                    ticks: {
                        minRotation: 90,
                        maxRotation: 90,
                        autoSkip: true,
                        maxTicksLimit: 50
                    },
                    display: true,
                    gridLines: {
                        display: false
                    }
                }],
                yAxes: [{
                    ticks: {
                        min: 0,
                        stepSize: 100
                    },
                    display: true,
                    gridLines: {
                        display: false
                    }
                }]
            },
            legend: {
                display: legendState
            }
        },
        data: {
            labels: ilabel,
            datasets: [
                {
                    label: "CASE RATE",
                    fill: true,
                    lineTension: 0.2,
                    backgroundColor: "transparent",
                    borderColor: "#F5990B",
                    pointBorderColor: '#F5990B',
                    pointHoverBackgroundColor: "#F5990B",
                    borderCapStyle: 'butt',
                    borderDash: [],
                    borderDashOffset: 0.0,
                    borderJoinStyle: 'miter',
                    borderWidth: 2,
                    pointBackgroundColor: "#F5990B",
                    pointBorderWidth: 5,
                    pointHoverRadius: 3,
                    pointHoverBorderColor: "#F5990B",
                    pointHoverBorderWidth: 2,
                    pointRadius: 0,
                    pointHitRadius: 10,
                    data: crate,
                    spanGaps: false
                },
                {
                    label: "DEATH RATE",
                    fill: true,
                    lineTension: 0.2,
                    backgroundColor: "transparent",
                    borderColor: "#EF8C99",
                    pointBorderColor: '#EF8C99',
                    pointHoverBackgroundColor: "#EF8C99",
                    borderCapStyle: 'butt',
                    borderDash: [],
                    borderDashOffset: 0.0,
                    borderJoinStyle: 'miter',
                    borderWidth: 2,
                    pointBackgroundColor: "#EF8C99",
                    pointBorderWidth: 5,
                    pointHoverRadius: 3,
                    pointHoverBorderColor: "#EF8C99",
                    pointHoverBorderWidth: 2,
                    pointRadius: 0,
                    pointHitRadius: 10,
                    data: drate,
                    spanGaps: false
                },
                {
                    label: "RECOVERY RATE",
                    fill: true,
                    lineTension: 0.2,
                    backgroundColor: "transparent",
                    borderColor: "#6FEB29",
                    pointBorderColor: '#6FEB29',
                    pointHoverBackgroundColor: "#6FEB29",
                    borderCapStyle: 'butt',
                    borderDash: [],
                    borderDashOffset: 0.0,
                    borderJoinStyle: 'miter',
                    borderWidth: 2,
                    pointBackgroundColor: "#6FEB29",
                    pointBorderWidth: 5,
                    pointHoverRadius: 3,
                    pointHoverBorderColor: "#6FEB29",
                    pointHoverBorderWidth: 2,
                    pointRadius: 0,
                    pointHitRadius: 10,
                    data: rrate,
                    spanGaps: false
                },
                {
                    label: "CASES RATE (10-Day Average)",
                    fill: true,
                    lineTension: 0.2,
                    backgroundColor: "transparent",
                    borderColor: "#F7ED1C",
                    pointBorderColor: '#F7ED1C',
                    pointHoverBackgroundColor: "#F7ED1C",
                    borderCapStyle: 'butt',
                    borderDash: [],
                    borderDashOffset: 0.0,
                    borderJoinStyle: 'miter',
                    borderWidth: 2,
                    pointBackgroundColor: "#F7ED1C",
                    pointBorderWidth: 5,
                    pointHoverRadius: 3,
                    pointHoverBorderColor: "#F7ED1C",
                    pointHoverBorderWidth: 2,
                    pointRadius: 0,
                    pointHitRadius: 10,
                    data: average,
                    spanGaps: true
                }
            ]
        }
    });